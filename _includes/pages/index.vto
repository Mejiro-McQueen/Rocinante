<style>

/* Group container */
.vento-group {
  padding: 24px;
  border-radius: 16px;
  #background: #f11827;
  margin-bottom: 24px;
  opacity: .90;
  #display: flex;
  #justify-content: center;
  #align-items: center;
}

/* Header */
.vento-group-header {
  margin-bottom: 16px;
  #justify-content: left;
}

.vento-group-title {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: #111827;
}

.vento-group-subtitle {
  margin: 4px 0 0;
  font-size: 0.9rem;
  color: #6B7280;
}

.vento-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 16px;
  padding: 16px;
}

.vento-card {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 14px 18px;
  border-radius: 12px;
  background: #ffffff;
  text-decoration: none;
  transition: transform 0.25s ease, box-shadow 0.25s ease, background-color 0.25s ease;
}

.vento-card:hover {
  transform: translateY(-4px) scale(1.02);
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  background-color: #f9fafb;
}

.vento-icon svg {
  width: 40px;
  height: 40px;
}

.vento-content {
  display: flex;
  flex-direction: column;
}

.vento-title {
  margin: 0;
  font-size: 1rem;
  font-weight: 600;
  color: #111827;
  transition: color 0.25s ease;
}

.vento-description {
  margin: 4px 0 0;
  font-size: 0.875rem;
  color: #6B7280;
  transition: color 0.25s ease;
}

.vento-card:hover .vento-title {
  color: #4F46E5;
}

.vento-card:hover .vento-description {
  color: #374151;
}

@media (max-width: 480px) {
  .vento-card {
    gap: 8px;
    padding: 12px 14px;
  }

  .vento-title {
    font-size: 0.95rem;
  }

  .vento-description {
    font-size: 0.8rem;
  }
}

.banner {
  background: rgba(255,255,255,0.6);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(0,0,0,0.05);
  color: #111827;
}

.page-banner {
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(12px);
  background: rgba(255, 255, 255, 0.6);
  border-bottom: 1px solid rgba(0,0,0,0.08);
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.banner-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 12px 20px;
}

.banner-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8px;
}

/* Tabs */
.banner-tabs {
  display: flex;
  gap: 20px;
}

.tab {
  text-decoration: none;
  color: #6b7280;
  padding-bottom: 6px;
  border-bottom: 2px solid transparent;
  font-weight: 500;
}

.tab:hover {
  color: #111827;
}

.tab.active {
  color: #4f46e5;
  border-color: #4f46e5;
}

.banner-motd {
  font-size: 0.875rem;
  color: #374151;
  padding: 6px 0;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 6px;
  text-align: center;
  font-weight: 500;
}

.content-area {
  position: relative;
  flex: 1;                 /* fills space between banner and footer */
  display: flex;
  flex-direction: column;
  padding: 24px;
  gap: 24px;
  overflow: hidden;        /* prevents overflow if image is large */

  /* Background styling */
  background-position: center top;
  background-repeat: no-repeat;
  background-size: contain;  /* scales image to fit within area */
}

.page-footer {
  padding: 16px 24px;
  text-align: center;
  background: #f3f4f6;
  border-top: 1px solid #e5e7eb;
  backdrop-filter: blur(12px);
  background: rgba(255,255,255,0.6);
  border-bottom: 1px solid rgba(0,0,0,0.05);
  color: #111827;
}

</style>


<script>
const tabs = document.querySelectorAll(".tab");

function updateTabs() {
  const hash = location.hash || "#overview";
  tabs.forEach(tab => tab.classList.toggle("active", tab.getAttribute("href") === hash));
}

window.addEventListener("hashchange", updateTabs);
updateTabs();

function setBackground() {
  const bannerHeight = document.querySelector('.page-banner').offsetHeight;
  const footerHeight = document.querySelector('.page-footer').offsetHeight;
  const contentArea = document.querySelector('.content-area');
  const height = window.innerHeight - bannerHeight - footerHeight;
  contentArea.style.height = height + "px";

const images = [
  '/files/backgrounds/background.jpg',
  '/files/backgrounds/ruri1.png',
  '/files/backgrounds/rt.png'
];

  const randomIndex = Math.floor(Math.random() * images.length);
  contentArea.style.backgroundImage = `url('${images[randomIndex]}')`;
  contentArea.style.backgroundSize = "contain";
}

function resizeBackground() {
  const bannerHeight = document.querySelector('.page-banner').offsetHeight;
  const footerHeight = document.querySelector('.page-footer').offsetHeight;
  const contentArea = document.querySelector('.content-area');
  const height = window.innerHeight - bannerHeight - footerHeight;
  contentArea.style.height = height + "px";
  
  contentArea.style.backgroundSize = "contain";
}

window.addEventListener("resize", resizeBackground);
window.addEventListener("DOMContentLoaded", setBackground);
</script>